<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton1"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/imageButton1"
        android:text="Username" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/imageButton1"
        android:text="Description" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/checkIns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/button4"
        android:background="@color/white"
        android:drawableTop="@drawable/checkmark"
        android:text="12"
        android:textSize="12sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/badges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view1"
        android:layout_alignRight="@+id/textView4"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:drawableTop="@drawable/badge"
        android:text="6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5"
        android:layout_below="@+id/viewAllPhotos"
        android:text="Recent Activity"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/textView4"
        android:background="@color/white"
        android:text="See More Activity" />

    <Button
        android:id="@+id/cigars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkIns"
        android:layout_alignBottom="@+id/checkIns"
        android:layout_toRightOf="@+id/textView2"
        android:background="@color/white"
        android:drawableTop="@drawable/cigar"
        android:text="14"
        android:textSize="12sp" />

    <Button
        android:id="@+id/photoPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/friends"
        android:background="@color/white"
        android:drawableTop="@drawable/ic_launcher"
        android:textSize="12sp" />

    <Button
        android:id="@+id/friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/badges"
        android:layout_alignBottom="@+id/badges"
        android:layout_toRightOf="@+id/cigars"
        android:background="@color/white"
        android:drawableTop="@drawable/friends"
        android:text="20"
        android:textSize="12sp" />

    <Button
        android:id="@+id/wishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cigars"
        android:layout_alignBottom="@+id/cigars"
        android:layout_toRightOf="@+id/viewAllPhotos"
        android:background="@color/white"
        android:drawableTop="@drawable/wishlist"
        android:text="1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/viewAllPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoPreview"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="View All Photos" />

</RelativeLayout>